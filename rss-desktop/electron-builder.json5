// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.aurora.rssreader",
  "asar": true,
  "compression": "maximum",
  "productName": "Aurora RSS Reader",
  "executableName": "AuroraRSSReader",
  "directories": {
    "output": "release/${version}"
  },
  "icon": "resources/icons/app-release",
  "files": [
    "dist",
    "dist-electron",
    "!dist-electron/**/*.map",
    "!dist/**/*.map"
  ],
  "mac": {
    "extraResources": [
      {
        "from": "resources/backend/aurora-backend",
        "to": "backend/aurora-backend"
      }
    ],
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "artifactName": "AuroraRSSReader-Mac-${version}-${arch}.${ext}",
    "category": "public.app-category.news",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": null,
    "entitlementsInherit": null
  },
  "win": {
    "extraResources": [
      {
        "from": "resources/backend/aurora-backend.exe",
        "to": "backend/aurora-backend.exe"
      }
    ],
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "AuroraRSSReader-Windows-${version}-${arch}.${ext}"
  },
  "nsis": {
    "artifactName": "AuroraRSSReader-Windows-${version}-${arch}-Setup.${ext}",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "portable": {
    "artifactName": "AuroraRSSReader-Windows-${version}-${arch}-Portable.${ext}"
  },
  "linux": {
    "extraResources": [
      {
        "from": "resources/backend/aurora-backend",
        "to": "backend/aurora-backend"
      }
    ],
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      }
    ],
    // Use a square PNG for Linux icon to avoid 0x0 icon path issues
    "icon": "public/icons/glow-bg.png",
    "artifactName": "AuroraRSSReader-Linux-${version}-${arch}.${ext}",
    "category": "Network"
  }
}

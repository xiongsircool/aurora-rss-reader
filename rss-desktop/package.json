{
  "name": "rss-desktop",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Aurora RSS Reader - AI-powered RSS reading application",
  "author": "Aurora RSS Team",
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\" --names \"UI,API\" --prefix-colors \"cyan,green\"",
    "dev:frontend": "vite --host",
    "dev:backend": "cd ../backend && python3 -m scripts.serve",
    "dev:electron": "vite --mode electron",
    "build": "vue-tsc && vite build",
    "pack": "pnpm build && electron-builder",
    "build:web": "vue-tsc && vite build",
    "preview": "vite preview",
    "migrate": "cd ../backend && python3 -m scripts.migrate",
    "typecheck": "vue-tsc --noEmit",
    "clean": "rm -rf dist dist-electron release .vite out"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "pinia": "^3.0.4",
    "vue": "^3.4.21",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "electron": "39.1.2",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.26"
  },
  "main": "dist-electron/main.js"
}
